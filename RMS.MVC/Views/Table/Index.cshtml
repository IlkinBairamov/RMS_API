@using RMS.Service.DTOs.TableDTO
@model TableGetAllDTO
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12">
    <div class="card mb-4">

        <div class="card-body">
            <h3>Tables</h3>
            <a class="btn btn-success mb-3" asp-controller="Table" asp-action="Create">Create</a>

            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Table Number</th>
                            <th scope="col">Table Status</th>
                            <th scope="col">Deposite</th>
                            <th scope="col">Amount of Seat</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Tables)
                        {
                        <tr>
                            <td>@item.Number</td>
                            <td>@item.Status</td>
                            <td>@item.Deposite</td>
                            <td>@item.AmountOfSeat</td>
                            <td>
                                <a class="btn btn-warning" asp-controller="Table" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-danger delete-item" asp-controller="Table" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $(".delete-item").click(function (ev) {
                ev.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        let link = $(this).attr("href")
                        fetch(link).then(response => response.json()).then(data => {
                            if (data.status == 200) {
                                Swal.fire(
                                    'Deleted!',
                                    'Your file has been deleted.',
                                    'success'
                                )
                                setTimeout(() =>
                                { location.reload(true) }, 1000);
                            }
                            else {
                                Swal.fire(
                                    'Error!',
                                    'Your file not Found.',
                                    'Failed'
                                )
                            }
                        })

                    }
                })
            })
        })
    </script>
} 